{
  "extends": [
    "config:recommended",
    "schedule:daily",
    "docker:pinDigests"
  ],
  "labels": [
    "dependencies"
  ],
  "automergeType": "branch",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchCategories": [
        "ci"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "gradle-wrapper"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/build.gradle/"
      ],
      "matchStrings": [
        "\\/\\/ renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\s*def\\s?\\S+\\s?=\\s?\"(?<currentValue>.*?)\".*"
      ],
      "versioningTemplate": "semver-coerced"
    }
  ]
}
